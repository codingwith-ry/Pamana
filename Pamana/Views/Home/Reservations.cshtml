@{
    Layout = "~/Views/Shared/_LoggedInPamana.cshtml";
}

<div class="row" style="padding: 60px;" ng-init="displayReservations()">
    <div class="col s12 m12">
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card white darken-1">
                    <div class="card-content black-text">
                        <span class="card-title" id="accHead">Reservations</span>
                        <div ng-repeat="reserveData in reservations">
                            <hr />
                            <div class="row" id="reserveRow">
                                <div class="col s3 m3 l3" style="margin-right: 50px;">
                                    <img src="~/Content/Rectangle 29.png" style="border-radius: 10px;" />
                                </div>
                                <div class="col s6 m6 l6" style="margin-right:60px; margin-top: 10px;">
                                    <p style="font-size: 22px;"><span class="bold">PAMANA</span> Filipino Restaurant</p>
                                    <br />
                                    <p>Reserved</p>
                                    <br />
                                    <br />
                                    <p class="bold icon-text"><i class="material-icons icon-text" style="margin: unset; margin-right: 5px;">date_range</i>  {{reserveData.reservationDate}} | {{reserveData.reservationTime}}</p>
                                    <br />
                                    <p class="bold icon-text"><i class="material-icons" style="margin: unset; margin-right: 5px">people</i> {{reserveData.reservationPeople}} Guests</p>
                                </div>
                                <div class="col s2 m2 l2 right-align" style="margin-top: 15px;">
                                    <span style="font-size: 12px; color: gray">3 hrs ago</span>
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <p style="margin-top: 5px;"><a class="modal-trigger" href="#modal1" ng-click="setCurrentReservation(reserveData.reservationID)">Cancel Reservation</a></p>
                                </div>
                            </div>

                        </div>
                        <hr />
                        <div id="modal1" class="modal">
                            <div class="modal-content">
                                <h4>Cancel Reservation</h4>
                                <p>Are you sure you want to cancel your reservation? This action cannot be undone.</p>
                            </div>
                            <div class="modal-footer">
                                <a href="#!" class="modal-close waves-effect waves-green btn-flat">Cancel</a>
                                <a href="#!" class="modal-close waves-effect waves-green btn-flat" ng-click="cancelReservation(reservationCurrent)">OK</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

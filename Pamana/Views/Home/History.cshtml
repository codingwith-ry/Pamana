@{
    Layout = "~/Views/Shared/_LoggedInPamana.cshtml";
}



<div class="row" style="padding: 60px;" ng-init="displayCancelledReservations()">
    <div class="col s12 m12">
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card white darken-1">
                    <div class="card-content black-text">
                        <span class="card-title" id="accHead">History</span>
                        <div ng-repeat="reserveData in reservationCancelled">
                            <hr />
                            <div class="row" id="reserveRow">
                                <div class="col s3 m3 l3" style="margin-right: 50px;">
                                    <img src="~/Content/Rectangle 29.png" style="border-radius: 10px;" />
                                </div>
                                <div class="col s6 m6 l6" style="margin-right:60px; margin-top: 10px;">
                                    <p style="font-size: 22px;"><span class="bold">PAMANA</span> Filipino Restaurant</p>
                                    <br />
                                    <p>Reserved</p>
                                    <br />
                                    <br />
                                    <p class="bold icon-text"><i class="material-icons icon-text" style="margin: unset; margin-right: 5px;">date_range</i>  {{reserveData.reservationDate}} | {{reserveData.reservationTime}}</p>
                                    <br />
                                    <p class="bold icon-text"><i class="material-icons" style="margin: unset; margin-right: 5px">people</i> {{reserveData.reservationPeople}} Guests</p>
                                </div>
                                <div class="col s2 m2 l2 right-align" style="margin-top: 15px;">
                                    <span style="font-size: 12px; color: gray">3 hrs ago</span>
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <br />
                                    <p style="margin-top: 5px;">{{reserveData.reservationStatus}}</p>
                                </div>
                            </div>
                        </div>
                        
                        <hr />
                        <div id="modal1" class="modal" style="height:480px; border-radius: 10px">
                            <div class="modal-content" style="padding-bottom: 0px;">
                                <h5 class="icon-text inter-bold" style="margin: unset; margin-bottom: 10px;"><i class="material-icons" style="margin: unset; margin-right: 5px">comment</i>Write a Review</h5>
                                <hr />
                                <p class="icon-text"><i class="material-icons" style="margin: unset; margin-right: 5px">access_time</i> 30 November 2024 | 12:30 PM</p>
                                <div class="input-field">
                                    <input type="text" placeholder="Topic" class="">
                                </div>
                                <div class="input-field col s3 m3 l3" style="padding-left: unset; margin-top: 0px;">
                                    <select>
                                        <option value="" disabled selected>Rating(out of 5)</option>
                                        <option value="1">5</option>
                                        <option value="2">4</option>
                                        <option value="3">3</option>
                                        <option value="2">2</option>
                                        <option value="3">1</option>
                                    </select>
                                </div>
                                <div class="input-field">
                                    <textarea id="textarea1" placeholder="Description" class="materialize-textarea custom-textarea"></textarea>
                                </div>
                            </div>
                            <div class="modal-footer" style="padding-right:25px">
                                <a id="modalButton2" class="modal-close waves-effect waves-green">Cancel</a>
                                <a id="modalButton1" class="modal-close waves-effect waves-green">Agree</a>
                            </div>
                        </div>
                        <div class="row" id="reserveRow">
                            <div class="col s3 m3 l3" style="margin-right: 50px;">
                                <img src="~/Content/Rectangle 29.png" style="border-radius: 10px;" />
                            </div>
                            <div class="col s6 m6 l6" style="margin-right:60px; margin-top: 10px;">
                                <p style="font-size: 22px;"><span class="bold">PAMANA</span> Filipino Restaurant</p>
                                <br />
                                <p>Reserved</p>
                                <br />
                                <br />
                                <p class="bold icon-text"><i class="material-icons icon-text" style="margin: unset; margin-right: 5px;">date_range</i>  30 November 2024 | 12:30 PM</p>
                                <br />
                                <p class="bold icon-text"><i class="material-icons" style="margin: unset; margin-right: 5px">people</i> 6 Guests</p>
                            </div>
                            <div class="col s2 m2 l2 right-align" style="margin-top: 15px;">
                                <span style="font-size: 12px; color: gray">3 hrs ago</span>
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <br />
                                <p style="margin-top: 7px;"><a class="btn modal-trigger" id="reviewBtn" href="#modal1">Review</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>


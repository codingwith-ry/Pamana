@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div style="position: absolute; top: 0; left: 0; width: 100%; height: 100%; background-image: url('/Content/login_background.png'); background-size: cover; background-position: center; background-repeat: no-repeat;">
    <div style="display: flex; justify-content: center; align-items: center; flex-direction: column; height: 90%;">
        <!-- Logo -->
        <div style="margin-bottom: 20px;">
            <img src="~/Content/PAMANA Logo.png" alt="Logo" style="width: 420px; height: auto;">
        </div>
        <div class="card" style="width: 400px; border-radius: 10px;
            background: rgba(255, 255, 255, 0.9);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
            <div class="card-content" style="padding: 30px;">
                <span class="card-title center-align" style="font-weight: bold; font-size: 24px; color: #C30000;">Admin Login</span>
                <div class="row">
                    <!-- Username Field -->
                    <div class="row" id="inputrow">
                        <div class="input-field rounded-input col s12 m12 l12">
                            <input placeholder="example@gmail.com" id="first_name" type="text" ng-model="email" ng-change="emailValidate()" ng-class="{'invalid-input': emailBool}">
                            <label for="first_name">Email</label>
                        </div>
                        <div class="row" style="margin-bottom: 0px; margin-left: 5px">
                            <div class="col s6 m6 l6">
                                <span id="errorText" ng-bind="emailError"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row" id="inputrow" style="margin-bottom: 0px">
                        <div class="input-field rounded-input col s12 m12 l12">
                            <input placeholder="   " id="first_name" type="text" class="validate" ng-model="password" ng-change="passValidate()" ng-class="{'invalid-input': passBool}">
                            <label for="first_name">Password</label>
                        </div>
                        
                    </div>
                    <!-- Remember Me and Forgot Password aligned horizontally -->
                    <div style="display: flex; justify-content: space-between; align-items: center;">
                        <label>
                            <input type="checkbox" />
                            <span>Remember Me</span>
                        </label>
                        <a href="@Url.Action("ForgotPass", "Home")" style="color: red;">Forgot Password?</a>
                    </div>
                    <br>
                </div>
            </div>
            <div class="card-action center-align">
                <a class="btn waves-effect waves-light" style="background-color: #C30000; width: 100%; border-radius: 5px" ng-click="login()">Login</a>
            </div>
        </div>
    </div>
</div>


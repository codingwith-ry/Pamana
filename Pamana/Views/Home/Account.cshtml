@{
    Layout = "~/Views/Shared/_LoggedInPamana.cshtml";
}


<div class="row" style="padding: 60px; " ng-init="accDetails()">
    <div class="col s12 m12">
        <div class="row">
            <div class="col s12 m12 l12">
                <div class="card white darken-1">
                    <div class="card-content black-text">
                        <span class="card-title" id="accHead">Account</span>
                        <hr />
                        <div class="row" style="margin: 30px; margin-left: 0px; margin-right: 0px;">
                            <div class="col s2 m2 l2" style="width: 150px;">
                                <img id="profuserIcon" src="~/Content/malupiton.jpg" />
                            </div>
                            <div class="col s6 m6 l6" style="margin-right: 70px;">
                                <br />
                                <h5 style="font-weight: bold" ng-bind="fullN"></h5>
                                <p style="color: grey" ng-bind="logEmail"></p>
                            </div>
                            <div class="col s4 m4 l4">
                                <br />
                                <br />
                                <div class="row">
                                    <div class="col s6 m6 l6 center-align">
                                        <a href="@Url.Action("EditProfile", "Home") "id="bookNow" class="waves-effect waves-light btn">Edit Account</a>
                                    </div>
                                    <div class="col s6 m6 l6 center-align">
                                        <a id="bookNow" style="background-color: #2B2B2B" class="waves-effect waves-light btn">Log Out</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s6 m6 l6">
                                <div class="input-field rounded-input col s12 m12 l12">
                                    <input placeholder=" " id="first_name" type="text" class="validate" disabled ng-model="logFirstN">
                                    <label style="font-size: 18px; font-weight:700; color: black;" for="first_name">First Name</label>
                                </div>
                            </div>

                            <div class="col s6 m6 l6">
                                <div class="input-field rounded-input col s12 m12 l12">
                                    <input placeholder=" " id="first_name" type="text" class="validate" disabled ng-model="logLastN">
                                    <label style="font-size: 18px; font-weight:700; color: black" for="first_name">Last Name</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s6 m6 l6">
                                <div class="input-field rounded-input col s12 m12 l12">
                                    <input placeholder=" " id="first_name" type="text" class="validate" disabled ng-model="logEmail">
                                    <label style="font-size: 18px; font-weight:700; color: black" for="first_name">Email</label>
                                </div>
                            </div>

                            <div class="col s6 m6 l6">
                                <div class="input-field rounded-input col s12 m12 l12">
                                    <input placeholder=" " id="first_name" type="password" class="validate" disabled ng-model="logPass">
                                    <label style="font-size: 18px; font-weight:700; color: black" for="first_name">Password</label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col s6 m6 l6">
                                <div class="input-field rounded-input col s12 m12 l12">
                                    <input placeholder=" " id="first_name" type="text" class="validate" disabled ng-model="logPhone">
                                    <label style="font-size: 18px; font-weight:700; color: black" for="first_name">Mobile Number</label>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                </div>
            </div>
        </div>

    </div>
</div>


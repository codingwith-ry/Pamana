@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div style="display: flex;">
    <div class="main-content" style="flex: 1; display: flex; justify-content: center; flex-direction: column;">
        <div class="col s12" style="padding: 50px">
            <!-- Header, Filters, and Admin Dropdown -->
            <div class="row" style="display: flex; align-items: center; justify-content: space-between; margin: 0;">
                <!-- Announcements Title -->
                <div>
                    <h4 style="margin: 0;"><b>Dashboard</b></h4>
                    <p style="margin: 0; padding-bottom: 50px">As of November 2024</p>
                </div>

                <!-- Filters Section -->
                <div style="display: flex; align-items: center; gap: 15px;">
                    <select class="browser-default" style="width: 120px;">
                        <option value="" disabled selected>November</option>
                        <option value="1">December</option>
                        <option value="2">January</option>
                    </select>
                    <select class="browser-default" style="width: 120px;">
                        <option value="" disabled selected>2024</option>
                        <option value="1">2023</option>
                        <option value="2">2025</option>
                    </select>
                </div>

                <!-- Administrator Account Dropdown -->
                <div>
                    <a class="dropdown-trigger btn-flat" href="#" data-target="admin-dropdown" style="color: #C30000; display: flex; align-items: center; margin-left: 100%;">
                        <i class="material-icons left">account_circle</i> Administrator
                        <i class="material-icons right">arrow_drop_down</i>
                    </a>
                </div>
            </div>

            <!-- Dropdown Structure -->
            <ul id="admin-dropdown" class="dropdown-content">
                <li><a href="@Url.Action("Profile", "Home")" style="color: #C30000;">Profile</a></li>
            </ul>


            <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
            <script>
                document.addEventListener('DOMContentLoaded', function () {
                    const dropdowns = document.querySelectorAll('.dropdown-trigger');
                    M.Dropdown.init(dropdowns, {
                        alignment: 'right', // Keeps dropdown aligned properly
                        coverTrigger: false // Prevent dropdown from overlapping trigger
                    });
                });
            </script>

            <!-- Stats Cards -->
            <div class="row" style="margin-bottom: 20px;">
                <!-- Card 1 -->
                <div class="col s12 m6 l3">
                    <div class="card white black-text" style="margin: 10px;">
                        <div class="card-content" style="display:flex; align-items:center;">
                            <i class="material-icons" style="font-size: 75px; margin-right: 15px; color: #C30000;">restaurant</i>
                            <div>
                                <span class="card-title"><b>293</b></span>
                                <p>Reservations</p>
                                <br />
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Card 2 -->
                <div class="col s12 m6 l3">
                    <div class="card white black-text" style="margin: 10px;">
                        <div class="card-content" style="display:flex; align-items:center;">
                            <i class="material-icons" style="font-size: 75px; margin-right: 15px; color: #C30000;">check_circle</i>
                            <div>
                                <span class="card-title"><b>276</b></span>
                                <p>Successful Reservations</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Card 3 -->
                <div class="col s12 m6 l3">
                    <div class="card white black-text" style="margin: 10px;">
                        <div class="card-content" style="display:flex; align-items:center;">
                            <i class="material-icons" style="font-size: 75px; margin-right: 15px; color: #C30000;">cancel</i>
                            <div>
                                <span class="card-title"><b>19</b></span>
                                <p>Cancelled Reservations</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Card 4 -->
                <div class="col s12 m6 l3">
                    <div class="card white black-text" style="margin: 10px;">
                        <div class="card-content" style="display:flex; align-items:center;">
                            <i class="material-icons" style="font-size: 75px; margin-right: 15px; color: #C30000;">event_note</i>
                            <div>
                                <span class="card-title"><b>23</b></span>
                                <p>Upcoming Reservations</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Upcoming Reservations Table -->
            <div class="row">
                <div class="col s12">
                    <div class="card">
                        <div class="card-content">
                            <div style="display: flex; justify-content: space-between; align-items: center;">
                                <span class="card-title">Upcoming Reservations</span>
                                <a href="@Url.Action("AdminReservations", "Home")" class="waves-effect waves-light btn red">View All</a>

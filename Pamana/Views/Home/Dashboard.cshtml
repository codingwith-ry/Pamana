                        </div>
                    </div>
                </div>
            </div>

            <!-- Reservation Statistics Charts -->
            <div class="row">
                <div class="col s12">
                    <div class="card">
                        <div class="card-content">
                            <span class="card-title">Reservation Statistics</span>
                            <div class="row">
                                <!-- Tabs -->
                                <div class="col s12">
                                    <ul class="tabs">
                                        <li class="tab col s3"><a href="#chart1">Reservations</a></li>
                                        <li class="tab col s3"><a href="#chart2">Successful Reservations</a></li>
                                        <li class="tab col s3"><a href="#chart3">Cancelled Reservations</a></li>
                                        <li class="tab col s3"><a href="#chart4">Feedbacks</a></li>
                                    </ul>
                                </div>

                                <!-- Tab 1 -->
                                <div id="chart1" class="col s12">
                                    <div>
                                        <canvas id="myChart1"></canvas>
                                    </div>
                                </div>

                                <!-- Tab 2 -->
                                <div id="chart2" class="col s12">
                                    <div>
                                        <canvas id="myChart2"></canvas>
                                    </div>
                                </div>

                                <!-- Tab 3 -->
                                <div id="chart3" class="col s12">
                                    <div>
                                        <canvas id="myChart3"></canvas>
                                    </div>
                                </div>

                                <!-- Tab 4 -->
                                <div id="chart4" class="col s12">
                                    <div>
                                        <canvas id="myChart4"></canvas>
                                    </div>
                                </div>
                            </div>
                            <script>
                                document.addEventListener('DOMContentLoaded', function () {
                                    const tabs = document.querySelectorAll('.tabs');
                                    M.Tabs.init(tabs);
                                });

                                const chartData = [
                                    { id: 'myChart1', data: [12, 19, 3, 5, 2, 3, 8] },
                                    { id: 'myChart2', data: [8, 15, 4, 6, 9, 7, 5] },
                                    { id: 'myChart3', data: [10, 5, 13, 2, 8, 6, 4] },
                                    { id: 'myChart4', data: [7, 10, 2, 9, 11, 5, 3] }
                                ];

                                chartData.forEach(chart => {
                                    const ctx = document.getElementById(chart.id).getContext('2d');
                                    new Chart(ctx, {
                                        type: 'bar',
                                        data: {
                                            labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'],
                                            datasets: [{
                                                label: '# of Reservations',
                                                data: chart.data,
                                                backgroundColor: '#C30000',
                                                borderColor: '#C30000',
                                                borderWidth: 0.5
                                            }]
                                        },
                                        options: {
                                            responsive: true,
                                            scales: {
                                                y: {
                                                    beginAtZero: true
                                                }
                                            }
                                        }
                                    });
                                });
                            </script>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Announcements and Feedbacks -->
            <div class="row">
                <div class="col s12 m6">
                    <div class="card">
